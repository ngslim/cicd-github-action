<div class='login-container bg-main'>
  <div class='login-card'>
    <a href='/' class='btn'><i class='bi bi-arrow-left'></i></a>
    <h1>Đăng nhập</h1>
    {{#if message}}
      <div class='alert alert-danger alert-dismissible fade show' role='alert'>
        {{message}}
        <div
          type='button'
          class='btn-close'
          data-bs-dismiss='alert'
          aria-label='Close'
        ></div>
      </div>
    {{/if}}
    <form method='post' action='/verify' id='login-form'>
      <div class='form-control'>
        <input
          id='username'
          name='username'
          type='text'
          placeholder='username'
        />
        <small></small>
        <span></span>
      </div>
      <div class='form-control'>
        <input
          id='password'
          name='password'
          type='password'
          placeholder='password'
        />
        <small></small>
        <span></span>
      </div>
      <div class='d-flex justify-content-center'>
        <button class='bg-variant' type='submit'>Đăng nhập</button>
      </div>
      <div class='register-link'>Chưa phải là thành viên?
        <a href='/register'>Đăng ký</a></div>
    </form>
  </div>
</div>