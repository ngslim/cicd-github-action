<div class='post-register-container bg-main'>
  <div class='post-register-card'>
    <h1>Một bước nữa thôi...</h1>
    <p style='text-align: center;'>Hoàn chỉnh các thông tin sau</p>
    {{#if message}}
      <div class='alert alert-danger alert-dismissible fade show' role='alert'>
        {{message}}
        <div
          type='button'
          class='btn-close'
          data-bs-dismiss='alert'
          aria-label='Close'
        ></div>
      </div>
    {{/if}}
    <form method='post' action='/update-user' id='post-register-form'>
      <div class='row'>
        <div class='col-6'>
          <div class='form-control'>
            <label>Họ và tên đệm (*)</label>
            <input id='lastname' name='lastname' type='text' placeholder='' />
            <small></small>
            <span></span>
          </div>
        </div>
        <div class='col-6'>
          <div class='form-control'>
            <label>Tên (*)</label>
            <input id='firstname' name='firstname' type='text' placeholder='' />
            <small></small>
            <span></span>
          </div>
        </div>
      </div>
      <div class='form-control'>
        <label>Địa chỉ</label>
        <input id='address' name='address' type='text' placeholder='' />
        <small></small>
        <span></span>
      </div>
      <div class='form-control'>
        <label>Trường/Nơi công tác</label>
        <input id='school' name='school' type='text' placeholder='' />
        <small></small>
        <span></span>
      </div>
      <div class='row'>
        <div class='col-6'>
          <div class='form-control'>
            <label>Số điện thoại</label>
            <input id='phone' name='phone' type='text' placeholder='' />
            <small></small>
            <span></span>
          </div>
        </div>
        <div class='col-6'>
          <div class='form-control'>
            <label>Ngày sinh</label>
            <input id='dob' name='dob' type='date' />
            <small></small>
            <span></span>
          </div>
        </div>
      </div>
      <div class='d-flex justify-content-center'>
        <button class='bg-variant' type='submit'>Hoàn tất</button>
      </div>
    </form>
  </div>
</div>