<div class='row bg-variant justify-content-center'>
  <div
    class='col-12 text-light text-center justify-content-center mb-5 mt-5'
    style='font-size: 48px; font-weight:500;'
  >
    Danh sách ứng tuyển đã gửi
  </div>
</div>
<div class='container-fluid mt-5 mb-5'>
  <div class='row'>
    <div class='col-12 mb-3'>
      <div class='card'>
        {{#each applyInfos}}
          <div class='list-group list-group-flush'>
            <div class='list-group-item'>
              <div class='row'>
                <div class='col-12 col-xl-10 border-end'>
                  <h3>{{this.name}}</h3>
                  <p>{{this.description}}</p>
                  <div class='row'>
                    <div class='col-6'>
                      <h6><b>Danh mục: </b>{{this.category}}</h6>
                    </div>
                    <div class='col-6'>
                      <h6><b>Lương: </b>{{this.salary}} VNĐ</h6>
                    </div>
                  </div>
                  <h6><b>Vị trí: </b>{{this.location}}</h6>
                  <h6><b>Địa chỉ: </b>{{this.address}}</h6>
                  <div class='row'>
                    <div class='col-6'>
                      <h6><b>Người đăng: </b><a
                          href='/profile?q={{this.posted_by}}'
                        >{{this.posted_by}}</a></h6>
                    </div>
                    <div class='col-6'>
                      <h6><b>Ngày gửi: </b>{{this.created}}</h6>
                    </div>
                  </div>
                  <div class='row'>
                    <h6><b>Trang thái:
                      </b>{{this.status}}</h6>
                  </div>

                </div>
                <div class='col-12 col-xl-2 align-self-center'>
                  <div class='d-flex align-items-center justify-content-around'>
                    <a href='/apply/delete-apply?_id={{this.apply_id}}'><h3
                        class='text-danger'
                      ><i class='bi bi-trash'></i></h3></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<div class='d-flex justify-content-center'>
  <nav aria-label='Page navigation example'>
    <ul class='pagination'>
      <li class='page-item'>
        <a class='page-link' href='#' aria-label='Previous'>
          <span aria-hidden='true'>&laquo;</span>
        </a>
      </li>
      <li class='page-item'><a class='page-link' href='#'>1</a></li>
      <li class='page-item'><a class='page-link' href='#'>2</a></li>
      <li class='page-item'><a class='page-link' href='#'>3</a></li>
      <li class='page-item'>
        <a class='page-link' href='#' aria-label='Next'>
          <span aria-hidden='true'>&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>