<div class='row bg-variant justify-content-center'>
  <div
    class='col-12 text-light text-center justify-content-center mb-5 mt-5'
    style='font-size: 48px; font-weight:500;'
  >
    Danh sách các ứng viên
  </div>
</div>
<div class='container-fluid mt-5 mb-5'>
  <div class='row'>
    <div class='col-12 mb-3'>
      <div class='card'>
        <div class='card-body'>
          <div class='row mb-4'>
            <div class='d-flex justify-content-center'>
              <h1><b>{{job.name}}</b></h1>
            </div>
          </div>
          <div class='row mb-5'>
            <div class='d-flex justify-content-center'>
              <h5>{{job.category}}</h5>
            </div>
          </div>
          <div class='row mb-5'>
            <div class='col-12 col-md-9 border-end'>
              <h4>{{job.description}}
              </h4>
            </div>
            <div class='col-12 col-md-3'>
              <h4><b>Vị trí: </b>{{job.location}}</h4>
              <h4><b>Lương: </b>{{job.salary}}</h4>
            </div>
          </div>
          <div class='row mb-5'>
            <div class='col-12'>
              <h4>
                <b>Địa chỉ: </b>
                {{job.address}}
              </h4>
            </div>
          </div>
        </div>
        <div class='list-group list-group-flush'>
          <div class='list-group-item'>
            <div class='row text-main'>
              <div class='d-flex justify-content-center'>
                <h5>
                  <b>Đã chấp thuận</b>
                </h5>
              </div>
            </div>
          </div>
        </div>
        {{#if noApplied}}
          <div class='list-group list-group-flush'>
            <div class='list-group-item'>
              <div class='row'>
                <div class='d-flex justify-content-center'>
                  <h5>
                    <em>Chưa có ứng viên nào được chấp thuận</em>
                  </h5>
                </div>
              </div>
            </div>
          </div>
        {{/if}}
        {{#each applied}}
          <div class='list-group list-group-flush'>
            <div class='list-group-item'>
              <div class='row'>
                <div class='col-12 col-xl-10 border-end'>
                  <div class='row'>
                    <div class='col-4 border-end'>
                      <a href='/profile?q={{this.username}}'><h5
                        >{{this.username}}</h5></a>
                    </div>
                    <div class='col-8'>
                      <h5><b>Ứng tuyển vào: </b>{{this.created}}</h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
        <div class='list-group list-group-flush'>
          <div class='list-group-item'>
            <div class='row text-main'>
              <div class='d-flex justify-content-center'>
                <h5>
                  <b>Ứng tuyển mới</b>
                </h5>
              </div>
            </div>
          </div>
        </div>
        {{#if noApply}}
          <div class='list-group list-group-flush'>
            <div class='list-group-item'>
              <div class='row'>
                <div class='d-flex justify-content-center'>
                  <h5>
                    <em>Chưa có ứng viên nào cho công việc này.</em>
                  </h5>
                </div>
              </div>
            </div>
          </div>
        {{/if}}
        {{#each applies}}
          <div class='list-group list-group-flush'>
            <div class='list-group-item'>
              <div class='row'>
                <div class='col-12 col-xl-10 border-end'>
                  <div class='row'>
                    <div class='col-4 border-end'>
                      <a href='/profile?q={{this.username}}'><h5
                        >{{this.username}}</h5></a>
                    </div>
                    <div class='col-8'>
                      <h5><b>Ứng tuyển vào: </b>{{this.created}}</h5>
                    </div>
                  </div>
                </div>

                <div class='col-12 col-xl-2 align-self-center'>
                  <div class='d-flex align-items-center justify-content-around'>
                    <a
                      href='/apply/response-apply?_id={{this._id}}&value=approve'
                    ><h5 class='text-success'><i
                          class='bi bi-check'
                        ></i></h5></a>
                    <a
                      href='/apply/response-apply?_id={{this._id}}&value=decline'
                    ><h5 class='text-danger'><i class='bi bi-x'></i></h5></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<div class='d-flex justify-content-center'>
  <nav aria-label='Page navigation example'>
    <ul class='pagination'>
      <li class='page-item'>
        <a class='page-link' href='#' aria-label='Previous'>
          <span aria-hidden='true'>&laquo;</span>
        </a>
      </li>
      <li class='page-item'><a class='page-link' href='#'>1</a></li>
      <li class='page-item'><a class='page-link' href='#'>2</a></li>
      <li class='page-item'><a class='page-link' href='#'>3</a></li>
      <li class='page-item'>
        <a class='page-link' href='#' aria-label='Next'>
          <span aria-hidden='true'>&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>