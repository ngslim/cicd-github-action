<div class='row bg-variant justify-content-center'>
  <div
    class='col-12 text-light text-center justify-content-center mb-5 mt-5'
    style='font-size: 48px; font-weight:500;'
  >
    Thông tin người dùng
  </div>
</div>
<div class='container-fluid d-flex justify-content-center mt-5 mb-5'>
  <div class='card w-100'>
    <div class='card-body'>
      <div class='col-12'>
        <div class='row mb-5'>
          <div class='col-12 col-md-3 border-end'><h3><b>Họ và tên đệm:</b></h3></div>
          <div class='col-9'><h3>{{user.lastname}}</h3></div>
        </div>
        <div class='row mb-5'>
          <div class='col-12 col-md-3 border-end'><h3><b>Tên:</b></h3></div>
          <div class='col-9'><h3>{{user.firstname}}</h3></div>
        </div>
        <div class='row mb-5'>
          <div class='col-12 col-md-3 border-end'><h3><b>Ngày sinh:</b></h3></div>
          <div class='col-9'><h3>{{user.dob}}</h3></div>
        </div>
        <div class='row mb-5'>
          <div class='col-12 col-md-3 border-end'><h3><b>Địa chỉ:</b></h3></div>
          <div class='col-9'><h3>{{user.address}}</h3></div>
        </div>
        <div class='row mb-5'>
          <div class='col-12 col-md-3 border-end'><h3><b>Trường/Nơi công tác:</b></h3></div>
          <div class='col-9'><h3>{{user.school}}</h3></div>
        </div>
        <div class='row mb-5'>
          <div class='col-12 col-md-3 border-end'><h3><b>Số điện thoại:</b></h3></div>
          <div class='col-9'><h3>{{user.phone}}</h3></div>
        </div>
        <div class='row mb-5'>
          <div class='col-12 col-md-3 border-end'><h3><b>E-mail:</b></h3></div>
          <div class='col-9'><h3>{{user.email}}</h3></div>
        </div>
        <div class='row'>
          <div class='col-12 col-md-3 border-end'><h3><b>Ngày tạo</b></h3></div>
          <div class='col-9'><h3>{{user.created}}</h3></div>
        </div>
      </div>
    </div>
  </div>
</div>